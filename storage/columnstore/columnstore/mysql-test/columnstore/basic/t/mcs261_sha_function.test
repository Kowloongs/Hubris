-- source ../include/have_columnstore.inc

--disable_warnings
DROP DATABASE IF EXISTS mcs261_db;
--enable_warnings

CREATE DATABASE mcs261_db;
USE mcs261_db;

CREATE TABLE t1
(
 t1_INT INT,
 t1_DECIMAL DECIMAL(12,5),
 t1_TEXT TEXT,
 t1_DATE DATE,
 t1_TIME TIME
 )ENGINE=Columnstore;
INSERT INTO t1 VALUES(103, 1234.5699, 'pqrstuvwxyz', '1997-12-12', '22:12:02');
INSERT INTO t1 VALUES(-7299, 111.99, 'abcdefghijklm', '2001-1-1', '23:59:59');
INSERT INTO t1 VALUES(9913, 98765.4321, repeat('q', 5), '09-12-11', '01:08:59');

SELECT SHA(NULL) FROM t1 LIMIT 1;
SELECT SHA(-1) FROM t1 LIMIT 1;
SELECT SHA(0) FROM t1 LIMIT 1;
SELECT SHA(0.5) FROM t1 LIMIT 1;
SELECT SHA(1234) FROM t1 LIMIT 1;
SELECT SHA('1234') FROM t1 LIMIT 1;
SELECT SHA('@') FROM t1 LIMIT 1;
SELECT SHA('a') FROM t1 LIMIT 1;
SELECT SHA('abcdefg') FROM t1 LIMIT 1;

SELECT t1_INT, SHA(t1_INT) FROM t1 ORDER BY 1;
SELECT t1_DECIMAL, SHA(t1_DECIMAL) FROM t1 ORDER BY 1;
SELECT t1_TEXT, SHA(t1_TEXT) FROM t1 ORDER BY 1;
SELECT t1_DATE, SHA(t1_DATE) FROM t1 ORDER BY 1;
SELECT t1_TIME, SHA(t1_TIME) FROM t1 ORDER BY 1;

# Clean UP
DROP DATABASE mcs261_db;
